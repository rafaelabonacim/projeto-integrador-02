<%- include('partials/header') -%>

<main>
    <section class="hero full-height">
        <section class="titles">
            <div class="container">
                <div class="row">
                <div class="col-12">
                    <h1>CADASTRO</h1>
                    <h2>Use o seu e-mail e crie uma senha para se cadastrar</h2>
                </div>
                </div>
            </div>
        </section>

        <section class="login-form register">
            <form class="needs-validation" novalidate>
                <div class="container card">

                    <div class="row">

                        <div class="col-12">
                            <div class="form-group">
                                <select id="disabledSelect" class="form-control" required>
                                    <option disabled selected>Escolha um Plano</option>
                                    <option value="plano-parafuso">Plano parafuso</option>
                                    <option value="plano-porca">Plano porca</option>
                                    <option value="plano-porcaeparafuso">Plano porca e parafuso</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-group">
                                <input type="text" id="name" class=form-control placeholder="Nome completo" required>
                            </div>
                        </div>


                        <div class="col-12">
                            <div class="form-group">
                                <input type="email" id="email" class=form-control placeholder="E-mail" required>
                            </div>
                        </div>

                        <div class="col-12 col-md-6">
                            <div class="form-group">
                                <input type="tel" id="telefone" class=form-control placeholder="Telefone (Opcional)">
                            </div>
                        </div>

                        <div class="col-12 col-md-6">
                            <div class="form-group">
                                <input type="tel" id="whatsapp" class=form-control placeholder="Whatsapp (Opcional)">
                            </div>
                        </div>

                        <div class="col-12 col-md-6">
                            <div class="form-group">
                                <input type="password" id="password" class=form-control placeholder="Senha" required>
                            </div>                        
                        </div>

                        <div class="col-sm-12 col-md-6">
                            <div class="form-group">
                              <input type="password" id="confirmPassword" class="form-control" placeholder="Confirmar Senha" required>
                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div class="form-group">
                                <button class="btn btn-solid btn-orange1"><i class="fas fa-user-check"></i> Cadastrar</button>
                            </div>
                            <div class="divider">
                                <hr>
                            </div>
                            <div>
                                <p class="no-margin-bottom">JÃ¡ tem login? <a href="/login">Entrar</a></p>
                            </div>
                        </div>
                        
                    </div>
                </div>
                
            </form>

        </section>
    </section>
</main>
<%- include('partials/footer') -%>